
  <div id="feed" data-user-infected = <%=@user.infected%>
                 data-user-id = <%= @user.id %>>
  <%= render partial: "event", collection: @events %>
  </div>
  <!-- <div class="sidebar2"></div> -->
  <div id="footer">

      <li><button><%= link_to "Battle!", new_battle_path, id: "confront", remote: "true" %></button></li>
      <li><button id="checkin"><a href="#">Send Location</a></button></li>
      <li><button id="rules" onclick = "document.getElementById('light').style.display='block';document.getElementById('fade').style.display='block'"
      style = "font-family: 'Rock Salt', cursive; ">View Rules</button></li>
      <li><button><%= link_to "logout", session_path(@user), :method => 'DELETE' %></button></li>
      <li><h3 id="handle">Your Code: <%= @user.handle %> </h3></li>
    </ul>

  </div>

